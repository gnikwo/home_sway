
set $monitor-1 DP-2
set $monitor-2 DVI-D-1
set $monitor-3 HDMI-A-2

output $monitor-1 pos 0 0 res 1920x1080@Hz
output $monitor-2 pos 1920 0 res 1920x1080@144Hz
output $monitor-3 pos 3840 0 res 1920x1080@Hz

workspace 1 output $monitor-2
workspace 2 output $monitor-2
workspace 3 output $monitor-2
workspace 4 output $monitor-2
workspace 5 output $monitor-2
workspace 6 output $monitor-2
workspace 7 output $monitor-2
workspace 8 output $monitor-2
workspace 9 output $monitor-3
workspace 10 output $monitor-3
workspace 0 output $monitor-3

exec --no-startup-id "swaymsg 'workspace 8; exec telegram-desktop'"
exec --no-startup-id "swaymsg 'workspace 8; exec riot-desktop'"

exec --no-startup-id "waybar -c ~/.config/sway/waybar/config -s ~/.config/sway/waybar/style.css"
exec --no-startup-id "waybar -c ~/.config/sway/waybar/config_tv_left -s ~/.config/sway/waybar/style.css"
exec --no-startup-id "waybar -c ~/.config/sway/waybar/config_tv_right -s ~/.config/sway/waybar/style.css"
exec --no-startup-id "waybar -c ~/.config/sway/waybar/config_tv_bottom -s ~/.config/sway/waybar/style.css"
exec --no-startup-id "waybar -c ~/.config/sway/waybar/config_tv_top -s ~/.config/sway/waybar/style.css"
